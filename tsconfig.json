{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "node_modules/@testing-library"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/base/*": ["src/components/base/*"],
      "@/layout/*": ["src/components/layout/*"],
      "@/widgets/*": ["src/components/widgets/*"],
      "@/contexts/*": ["src/core/contexts/*"],
      "@/constants/*": ["src/core/constants/*"],
      "@/data/*": ["src/core/data/*"],
      "@/helpers/*": ["src/core/helpers/*"],
      "@/hooks/*": ["src/core/hooks/*"],
      "@/services/*": ["src/core/services/*"],
      "@/handlers/*": ["src/core/handlers/*"],
      "@/schemas/*": ["src/core/schemas/*"],
      "@/mock/*": ["src/tests/mock/*"],
      "@/utils/*": ["src/tests/utils/*"],
      "@/pages/*": ["src/pages/*"],
      "@/types/*": ["src/core/types/*"],
      "@/enums/*": ["src/core/enums/*"]
    },
    "incremental": true
  },
  "include": ["next-env.d.ts", "./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules"]
}
